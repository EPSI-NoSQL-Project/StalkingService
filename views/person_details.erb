<!doctype html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<title>Stalker</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	<link rel="stylesheet" href="http://getbootstrap.com/examples/sticky-footer/sticky-footer.css">
</head>
<body>
	<div class="container">
		<div class="page-header">
			<h1>
				<a href="/"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></a>
				<%= nameToFind %> from <%= location %>
			</h1>
		</div>

		<ul class="nav nav-tabs">
			<li role="presentation" class="<%= activeNav == "google" ? "active" : '' %>">
				<a href="/person?id=<%=id%>&activeNav=google">
					<img src="img/google_logo.png" alt="Google" width="40" height="40"/>
				</a>
			</li>
			<li role="presentation" class="<%= activeNav == "twitter" ? "active" : '' %>">
				<a href="/person?id=<%=id%>&activeNav=twitter">
					<img src="img/twitter_logo.png" alt="Twitter" width="40" height="40"/>
				</a>
			</li>
			<li role="presentation" class="<%= activeNav == "enjoygram" ? "active" : '' %>">
				<a href="/person?id=<%=id%>&activeNav=enjoygram">
					<img src="img/enjoygram_logo.png" alt="Enjoygram" width="50" height="40"/>
				</a>
			</li>
		</ul>

<% if activeNav == "google"  %>
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>title</th>
				<th>subtitle</th>
				<th>description</th>
			</tr>
		</thead>
		<tbody>
			<% googleInfos.each do |googleLine| %>
				<tr>
					<td><%=googleLine['title']%></td>
					<td><%=googleLine['subtitle']%></td>
					<td><%=googleLine['description']%></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% end %>

<% if activeNav == "twitter"  %>
		<h3>Users</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>avatar</th>
					<th>surnom</th>
					<th>description</th>
				</tr>
			</thead>
			<tbody>
				<% twitterInfos.each do |twitterLine| %>
					<% twitterLine['users'].each do |userLine| %>
						<tr>
							<td>
								<img src="<%=userLine['lien_image_profile']%>" alt="<%=userLine['lien_image_profile']%>"/> 
							</td>
							<td><%=userLine['surnom']%></td>
							<td><%=userLine['description']%></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>

		<h3>Friends</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>nom</th>
					<th>pseudo</th>
					<th>description</th>
					<th>statuses count</th>
					<th>friends count</th>
				</tr>
			</thead>
			<tbody>
				<% twitterInfos.each do |twitterLine| %>
					<% twitterLine['amis'].each do |friendLine| %>
						<tr>
							<td><%=friendLine['nom']%></td>
							<td><%=friendLine['pseudo']%></td>
							<td><%=friendLine['description']%></td>
							<td><%=friendLine['statuses_count']%></td>
							<td><%=friendLine['friends_count']%></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>

		<h3>Status</h3>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>retweet</th>
					<th>time zone</th>
					<th>creation status</th>
					<th>contenu status</th>
					<th>source status</th>
					<th>profile image</th>
				</tr>
			</thead>
			<tbody>
				<% twitterInfos.each do |twitterLine| %>
					<% twitterLine['status'].each do |statusLine| %>
						<tr>
							<td><%=statusLine['retweet']%></td>
							<td><%=statusLine['time_zone']%></td>
							<td><%=statusLine['creation_status']%></td>
							<td><%=statusLine['contenu_status']%></td>
							<td><%=statusLine['source_status']%></td>
							<td><%=statusLine['profile_image_url_https']%></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
<% end %>

<% if activeNav == "enjoygram"  %>

	<% enjoygramInfos.each do |enjoygramLine| %>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>image</th>
					<th>username</th>
					<th>bio</th>
					<th>website</th>
				</tr>
			</thead>
			<tbody>
					<tr>
						<td>
							<img src="<%=enjoygramLine['image']%>" alt="<%=enjoygramLine['image']%>"/>
						</td>
						<td><%=enjoygramLine['username']%></td>
						<td><%=enjoygramLine['bio']%></td>
						<td><%=enjoygramLine['website']%></td>
					</tr>
			</tbody>
		</table>

		<% enjoygramLine['images'].each do |imageLine| %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>image</th>
						<th>description</th>
						<th>website</th>
						<th>comments</th>
					</tr>
				</thead>
				<tbody>
						<tr>
							<td>
								<img src="<%=imageLine['url']%>" alt="<%=imageLine['url']%>"/>
							</td>
							<td><%=imageLine['description']%></td>
							<td><%=enjoygramLine['website']%></td>
							<td>
								<% imageLine['comments'].each do |comment| %>
									<%=comment['username']%> - <%=comment['comment']%> <br/>
								<% end %>
							</td>
						</tr>
				</tbody>
			</table>
		<% end %>
	<% end %>
<% end %>

	</div>
</body>
<footer class="footer">
	<div class="text-center">
		<p class="text-muted">
			Mailys AIROUCHE & Vincent KELLEHER & Amandine PALLAS & Kim SAVAROCHE & Theo VERMERSCH
		</p>
	</div>
</footer>
</html>